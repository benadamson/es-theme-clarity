<theme>
    <formatVersion>3</formatVersion>
    <include>./../clarity.xml</include>

	<view name="system">
		
		<image name="logo">
			<path>./art/system.svg</path>
		</image>
		
	</view>

	<view name="basic, detailed">
	
		<image name="logo">
			<path>./art/system.svg</path>
			<origin>0.5 0.5</origin>
			<pos>0.191 0.047</pos> <!-- top column positioning (sans origin) -->
			<pos>0.191 0.808</pos> <!-- bottom column positioning -->
			<maxSize>0.285 0.12</maxSize>
			<color>ffffffdd</color>
		</image>
		
	</view>

	<view name="basic">
		
		<image name="logo2" extra="true">
			<path>./art/controller.svg</path>
			<pos>0.691 0.47</pos>
			<maxSize>0.35 0.5</maxSize>
		</image>
		
	</view>

	<view name="detailed">

		<image name="md_image">
			<pos>0.692 0.47</pos>
			<maxSize>0.3 0.534</maxSize>
		</image>
		
		<rating name="md_rating">
			<pos>0.634 0.75</pos>
		</rating>

	</view>
	
</theme>